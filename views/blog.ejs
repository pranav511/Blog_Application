<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partial/head') %>
        <title>Home1</title>
        
</head>

<body>
    <%- include('./partial/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="<%= blog.coverImage %>" width="400px">
            <div class="mt-2">
                <p class="mt-3"><%= blog.body %></p>
            </div>
        </div>


        <!-- user -->
        <div class="container mt-4">
            <img src="<%= blog.createdBy.profileImageURL %>" alt="No Image" width="100px">
            <sup><i><%= blog.createdBy.fullName %></i></sup>
        </div>

        <!-- Comments -->
        <div class="container mt-3">
            <h1>Comments <span class="badge text-bg-primary rounded-pill">
                <%= comments.length %>
            </span></h1>
            <% if (locals.user) { %>
                <form action="/blog/comment/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Please Enter Your Comments">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-sm btn-primary">Add</button>
                    </div>
                </form>
                <div class="mt-3">
                    <% comments.forEach(comment=> { %>
                        <div>
                            <img src="<%= comment.createdBy.profileImageURL %>" alt="No Image" width="100px">
                            <%= comment.createdBy.fullName %>:<pre><%= comment.content %></pre>
                        </div>
                        <% }) %>
                </div>
                <% } %>

        </div>

        <%- include('./partial/script') %>
</body>

</html>